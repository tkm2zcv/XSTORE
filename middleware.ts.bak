import { withAuth } from 'next-auth/middleware'

export default withAuth({
  callbacks: {
    authorized: ({ token }) => !!token,
  },
  pages: {
    signIn: '/admin/login',
  },
})

export const config = {
  matcher: [
    '/admin/((?!login).*)', // /admin/login以外のすべてのadminページ
    '/api/admin/:path*',
  ],
}
